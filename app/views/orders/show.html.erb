<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h2>Thank you for your order!</h2>
    <p>Please see details of your order below. Your receipt will be sent to <%= @order.email %>.</p>
  </div>

  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @list_order.each do |item| %>
        <%= render 'item_order', product: item.product, quantity: item.quantity %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL: 
        </th>
      </tr>
    </tfoot>
  </table>
  <h2><%= number_to_currency(@order.total_cents / 100) %></h2>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
